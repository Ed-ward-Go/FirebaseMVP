<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:background="@color/claregray"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2d2d2d"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imagenLocacionRow"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:visibility="gone" />

            </LinearLayout>

            <View style="@style/Divider" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nombreLocacionRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="nombre"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/UbicacionRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="ubicacion"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/urlLocacionRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Url"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/latLocacionRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="latitud"
                        android:visibility="gone"
                        android:gravity="center"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/lonLocacionRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="longitud"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_share_blu_64dp" />

            </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>