<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/firewithe"
    tools:context=".Vista.LoginView.VistaLogin">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="160dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="Patron MVP"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:background="@drawable/txt_style"
        android:drawablePadding="5dp"
        android:hint="email"
        android:drawableLeft="@drawable/ic_email_black_32dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawablePadding="5dp"
        android:hint="pasword"
        android:drawableLeft="@drawable/ic_lock_outline_black_32dp"
        android:background="@drawable/txt_style"
        android:inputType="textPassword"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="ingresar"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boton_border"/>

    <Button
        android:id="@+id/btnRegUserLogin"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="Registrarse"
        android:background="@drawable/boton_border"/>

</LinearLayout>